{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es7"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "/node_modules/"
  ],
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ]
}